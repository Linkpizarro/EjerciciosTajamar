@using TCAP_2._0.Models.Class
@model List<Pub>
@{ int i = 0;}
<div class="row">
    <div class="col s12 center-align">
        <h3>Establecimientos Activos</h3>
    </div>
</div>
<div class="row">
    <div class="col s12">
        <table class="highlight s10">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Pub item in Model)
                {
                    if (item.Status_Pub == 2)
                    {
                        @Html.Partial("_LayoutPubs", item)
                        i++;
                    }

                }
                @if (i == 0)
                {
                    <tr>
                        <td class="red-text center-align" colspan="4">NINGÚN ESTABLECIMIENTO ACTIVO</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

