@using TCAP_2._0.Models.Class
@model Party
<div id="info_@Model.Id_Party" class="modal">
    <div class="modal-content">
        <div class="row">
            <div class="col s3 m3"></div>
            <div class="col s16 m6">
                <p><h3>@Model.Boargame_Party</h3> @Model.Start_Party</p>
                <p><b>@Model.Pub.Name_Pub</b></p>

                <p>@Model.Current_Participant_Party / @Model.Max_Participant_Party</p>
                <h4>Paticipantes</h4>
                <ul class="collection">
                    @foreach (Participant participant in Model.Participants)
                    {
                        <li class="collection-item avatar">
                            <img src="~/Media/Img/Avatars/@participant.Player.GeneralData.Image_User" class="circle" style="width:50px;height:50px;"/>
                            <span class="title">@participant.Player.Nick_Player</span> 
                            <p><b>Nivel:</b>@participant.Player.Level_Player</p>
                            <p class="secondary-content">
                                @if (participant.Leader_Participant)
                                {
                                    <i class="yellow-text fas fa-crown"></i>
                                }
                            </p>
                        </li>
                    }
                </ul>
            </div>
            <div class="col s3 m3"></div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="col s5 m5"></div>
        <div class="col s2 m2">
            @foreach (Participant participant in Model.Participants)
            {
                if (((Player)Session["Player"]).Id_Player == participant.Id_Player && participant.Leader_Participant
                    && Model.Status_Party == 4)
                {
                    <button class="red btn">Cancelar Partida</button>
                }
            }
        </div>
        <div class="col s5 m5"></div>
    </div>
</div>

