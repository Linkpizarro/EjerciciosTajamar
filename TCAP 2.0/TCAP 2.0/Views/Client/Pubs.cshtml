@using TCAP_2._0.Models.Class
@model List<Pub>
@{
    ViewBag.Title = "Establecimientos";
}
@Html.Partial("_LayoutHeader")

<main>
    <div class="row">
        <div class="col s12 center-align">
            @if (Model != null)
            {
                <h3>Establecimientos Activos</h3>
                <div class="row">
                    <div class="col s12">
                        <table class="highlight s10">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Pub item in Model)
                                {
                                    @Html.Partial("_LayoutPubs", item)
                                }
                            </tbody>
                         </table>
                      </div>
                  </div>
                }
                else
                {
                    <h2 class="red-text">NO TIENES NINGÚN ESTABLECIMIENTO</h2>
                }
            </div>
        </div>
    </main>

@section Script
{
    <script>
            $(document).ready(function(){
                $('.modal').modal();
            });
    </script>

}
@Html.Partial("_LayoutFooter")
