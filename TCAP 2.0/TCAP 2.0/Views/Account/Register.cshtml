@using TCAP_2._0.Models.Class
@model User
@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_LayoutNoHeaderFooter.cshtml";
}
<center>
    <div class="container">
        <div class="row"></div>
        <div class="z-depth-1 grey lighten-4" style="display: inline-block; padding: 35px; border: 1px solid #EEE;">
            <p class="red-text">@Html.ValidationMessageFor(z => z.Name_User)</p>
            <p class="red-text">@Html.ValidationMessageFor(z => z.Surname_User)</p>
            <p class="red-text">@Html.ValidationMessageFor(z => z.Email_User)</p>
            <p class="red-text">@Html.ValidationMessageFor(z => z.Password_User)</p>
            <p class="red-text">@Html.ValidationMessageFor(z => z.RepPassword_User)</p>
            <p class="red-text">@Html.ValidationMessageFor(z => z.Id_Rol)</p>
            @if (!(ViewBag.Error is null))
            {
                <p class="red-text">@ViewBag.Error</p>
            }
            <h5 class="black-text">@ViewBag.Title</h5>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)
                <div class='row'>
                    <div class="col s6">
                        <div class='input-field col s12'>
                            @Html.LabelFor(model => model.Name_User)
                            @Html.EditorFor(model => model.Name_User)
                        </div>
                    </div>
                    <div class="col s6">
                        <div class='input-field col s12'>
                            @Html.LabelFor(model => model.Surname_User)
                            @Html.EditorFor(model => model.Surname_User)
                        </div>
                    </div>
                </div>
                <div class='row'>
                    <div class="col s6">
                        <div class='input-field col s12'>
                            @Html.LabelFor(model => model.Email_User)
                            @Html.EditorFor(model => model.Email_User)
                        </div>
                    </div>
                    <div class="col s6">
                        <div class='input-field col s12'>
                            @Html.LabelFor(model => model.Password_User)
                            @Html.EditorFor(model => model.Password_User)
                        </div>
                    </div>
                </div>
                <div class='row'>
                    <div class="col s6">
                        <div class="file-field input-field col s12">
                            <div class="btn amber">
                                <span class="black-text">Avatar</span>
                                @Html.TextBoxFor(m => m.File_User, new { type = "file" })
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path" type="text" placeholder="Upload one files">
                            </div>
                        </div>
                    </div>
                    <div class="col s6">
                        <div class='input-field col s12'>
                            @Html.LabelFor(model => model.RepPassword_User)
                            @Html.EditorFor(model => model.RepPassword_User)
                        </div>
                    </div>
                </div>
                <div class='row'>
                    <div class="col s3"></div>
                    <div class="col s6 center-align">
                        <div class='input-field col center-align s6'>
                            <label class="center-align">
                                @Html.RadioButtonFor(model => model.Id_Rol, 2)
                                <span>Jugador</span>
                            </label>
                        </div>
                        <div class='input-field col center-align s6'>
                            <label class="center-align">
                                @Html.RadioButtonFor(model => model.Id_Rol, 1)
                                <span>Cliente</span>
                            </label>
                        </div>
                    </div>
                    <div class="col s3"></div>
                </div>
                <br />
                <div class='row'>
                    <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect amber black-text'
                            style="font-family: 'ZCOOL KuaiLe', cursive !important;">
                        Registrarse
                    </button>
                </div>
            }
            @Html.ActionLink("¿Ya tienes una cuenta? Inicia sesión ahora.", "Login", "Account", null, new { @class = "orange-text" })
            <br />
            @Html.ActionLink("Volver a Home", "Index", "Home", null, new { @class = "green-text" })
        </div>
        <div class="row"></div>
    </div>
</center>

