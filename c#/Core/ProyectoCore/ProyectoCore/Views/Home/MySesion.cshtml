
@{
    ViewData["Title"] = "MySesion";
}

<h2>MySesion</h2>

@section css
{ 
    <link href="~/css/jquery.countdown.css" rel="stylesheet" />
}

<p style="color:blue;">@ViewData["Message"]</p>
<div id="time"></div>
<p style="color:red;">Nombre: @ViewData["Name"], Edad: @ViewData["Year"]</p>

<a asp-controller="Home" asp-action="MySesion" asp-route-accion="guardar">Guardar</a>|
<a asp-controller="Home" asp-action="MySesion" asp-route-accion="mostar">Mostrar</a>

@section scripts
{ 
    <script src="~/js/jquery.countdown.js"></script>
    <script>
        $(document).ready(function () {
            $("#time").countdown({
                "seconds": 30,
                "warning-time": 5,
                "normal-class": "countdown-normal",
                "warning-class": "countdown-warning",
                "stop-class": "countdown-stop"
            });
        });
    </script>
}