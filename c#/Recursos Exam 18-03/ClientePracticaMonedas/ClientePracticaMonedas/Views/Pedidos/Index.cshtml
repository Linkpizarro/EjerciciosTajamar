@model IEnumerable<ClientePracticaMonedas.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h2>Mis Pedidos</h2>
@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Moneda_Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Unidades)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Cliente_Id
                    </td>
                    <td>
                        @item.Moneda_Id
                    </td>
                    <td>
                        @item.Unidades
                    </td>
                    <td>
                        @item.Fecha
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new {  id=item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4>No tienes Pedidos...</h4>
}
