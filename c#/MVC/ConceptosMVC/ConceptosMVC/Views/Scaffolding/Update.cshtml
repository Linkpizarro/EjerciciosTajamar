@using ConceptosMVC.Models
@model DEPT
@{
    ViewBag.Title = "Update";
}

<h2>Modificar Departamento</h2>
@using (Html.BeginForm("Update", "Scaffolding", FormMethod.Post))
{
    Html.ValidationSummary(true);
    <div class="form-group">
        @Html.LabelFor(z => z.DEPT_NO, null, new { @class = "control-label" })
        @Html.TextBoxFor(z => z.DEPT_NO, null, new { @class = "from-control",@readonly = "readonly"})
    </div>
    <div class="form-group">
        @Html.LabelFor(z => z.DNOMBRE, null, new { @class = "control-label" })
        @Html.EditorFor(z => z.DNOMBRE, null, new { @class = "from-control" })
        @Html.ValidationMessageFor(z => z.DNOMBRE, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(z => z.LOC, null, new { @class = "control-label" })
        @Html.EditorFor(z => z.LOC, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(z => z.LOC, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Actualizar</button>
    </div>
    <p>@Html.ActionLink("Atrás", "Index", "Scaffolding")</p>
}

