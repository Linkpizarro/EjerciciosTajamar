@model List<PruebaLINQ.Models.EMP>
@{
    ViewBag.Title = "Index";
}
@if(!(ViewBag.error is null))
{
    <div class="alert-danger">@ViewBag.error</div>
}
<h2>Oficios</h2>
<form method="post" class="form-horizontal">
    @foreach (var item in ViewBag.oficios)
    {
        <div class="form-group">
            <input class="radio-inline" type="radio" name="oficio" value="@item"/>
            <label class="control-label">@item</label>
        </div>
    }
    <div class="form-group">
        <label class="control-label">Salario</label>
        <input type="number" class="form-control" name="increment" />
    </div>
    <div class="form-group">
        <input type="submit" class="form-control" value="Modificar" />
    </div>
</form>
    @if (!(Model is null))
    {
        <h2>Empleados</h2>
        <table class="table">
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.APELLIDO</td>
                    <td>@item.OFICIO</td>
                    <td>@item.SALARIO</td>
                </tr>
            }
        </table>
    }



