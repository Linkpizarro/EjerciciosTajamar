@model IEnumerable<MvcTablasAzure.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div>
    <form method="post">
        <div>
            <label>Empresa</label>
            <input type="text" name="empresa" class="form-control" />
        </div>
        <div>
            <button type="submit" class="btn-default">Buscar</button>
        </div>
    </form>
</div>

<p>
    @Html.ActionLink("Añadir", "Create")
</p>
@if (Model != null)
{
    <table class="table">
        <tr>
            <th>Empresa</th>
            <th>IdCliente</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Empresa</td>
                <td>@item.IdCliente</td>
                <td>@item.Nombre</td>
                <td>@item.Apellidos</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { empresa=item.PartitionKey,idcliente=item.RowKey }) |
                    @Html.ActionLink("Detalles", "Details", new { empresa = item.PartitionKey, idcliente = item.RowKey }) |
                    @Html.ActionLink("Eliminar", "Delete", new { empresa = item.PartitionKey, idcliente = item.RowKey })
                </td>
            </tr>
        }

    </table>

}
