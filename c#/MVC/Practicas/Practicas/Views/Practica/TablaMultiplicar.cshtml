
@{
    ViewBag.Title = "TablaMultiplicar";
    int i = 1;
}

<h1>TablaMultiplicar</h1>
<form class="form-horizontal" method="post">
    <div class="form-group">
        <label class="control-label">Número:</label>
        <input class="form-control" type="number" name="num" />
    </div>
    <div class="form-group">
        <input type="submit" class="form-control btn-primary" value="Mostrar" name="btnMostrar" />
    </div>
</form>
@if (!(ViewBag.Num is null))
{
    <h2>Tabla del @ViewBag.Num</h2>
    <table class="table-bordered text-center" style="font-size:35px;">
        @foreach (int item in ViewBag.NumList)
        {
            <tr>
                <td>@ViewBag.Num X @i</td>
                <td>=</td>
                <td>@item</td>
            </tr>
            i++;
        }
    </table>
}
<br />
<button class="btn-warning">@Html.ActionLink("Atrás", "Index", "Practica")</button>


