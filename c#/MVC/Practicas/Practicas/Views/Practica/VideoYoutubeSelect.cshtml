@model List<Practicas.Models.Video>
@using Practicas.Models
@{
    ViewBag.Title = "VideoYoutubeSelect";
}

<h2>Video Youtube</h2>
<form method="post" class="form-horizontal">
    <div class="form-group">
        <label class="control-label">Video</label>
        <select type="text" class="form-control" name="url">
            @if (!(Model is null))
            {
                foreach (Video item in Model)
                {
                    <option value="@item.Code">@item.Name</option>
                }
            }
        </select>    
    </div>
    <div class="form-group">
        <input type="submit" class="form-control btn-danger" value="Ver Video" />
    </div>
</form>
<br />
<button class="btn-warning">@Html.ActionLink("Atrás", "Index", "Practica")</button>
<br />
<br />
<div class="row text-center">
    <div class="col-10 text-center">
        @Html.Raw(ViewBag.Html)
    </div>
</div>

