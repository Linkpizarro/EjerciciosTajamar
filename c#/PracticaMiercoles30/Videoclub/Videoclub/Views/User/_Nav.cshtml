@using Videoclub.Models
@model Cliente
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button> 
            @if (Model != null)
            {
                <span class="navbar-brand">
                    <img src="~/Images/CLIENTES/@Model.Imagen" style="width:30px;height:30px;" class="img-circle"/>
                    @Model.Nombre
                </span>
                @Html.ActionLink("Mis Pedidos", "Pedidos", "User",null,new { @class = "navbar-brand" })
                @Html.ActionLink("Cerrar Sesión", "Logout", "User", null, new { @class = "navbar-brand" })
            }
            else
            {
                @Html.ActionLink("Iniciar Sesión", "Login", "User", null, new { @class = "navbar-brand" })
            }

        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav"></ul>
        </div>
    </div>
</div>
