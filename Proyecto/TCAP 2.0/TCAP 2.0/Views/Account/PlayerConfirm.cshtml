@using TCAP_2._0.Models.Class
@model Player
@{
    ViewBag.Title = "Confirmación de Cuenta";
    Layout = "~/Views/Shared/_LayoutNoHeaderFooter.cshtml";
}
<center>
    <div class="container">
        <div class="row"></div>
        <div class="z-depth-1 grey lighten-4" style="display: inline-block; padding: 35px; border: 1px solid #EEE;">
            <h5 class="black-text">Confirmación de Cuenta</h5>
            <p class="red-text">@Html.ValidationMessageFor(model => model.Nick_Player)</p>
            <p class="red-text">@Html.ValidationMessageFor(model => model.Age_Player)</p>
            @if (!(ViewBag.Error is null))
            {
                <p class="red-text">@ViewBag.Error</p>
            }
            @using (Html.BeginForm("PlayerConfirm", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id_User)
                <div class='row'>
                    <div class="col s3">
                    </div>
                    <div class="col s6">
                        <div class='input-field col s12'>
                            @Html.LabelFor(model => model.Nick_Player)
                            @Html.EditorFor(model => model.Nick_Player)
                        </div>
                    </div>
                    <div class="col s3">
                    </div>
                </div>
                <div class='row'>
                    <div class="col s6">
                        <div class='input-field col s12'>
                            @Html.LabelFor(model => model.Age_Player)
                            @Html.EditorFor(model => model.Age_Player)
                        </div>
                    </div>
                    <div class="col s6">
                        <div class='input-field col s12'>
                            <label>
                                @Html.RadioButtonFor(model => model.Sex_Player, "F")
                                <span>Mujer</span>
                            </label>
                        </div>
                    </div>
                    <div class="col s6">
                        <div class='input-field col s12'>
                            <label>
                                @Html.RadioButtonFor(model => model.Sex_Player, "M")
                                <span>Hombre</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class='row'>
                    <div class="col s12">
                        <div class='input-field col s12'>
                            @Html.TextAreaFor(model => model.Description_Player)
                            @Html.LabelFor(model => model.Description_Player)
                        </div>
                    </div>
                </div>
                <br />
                <div class='row'>
                    <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect user black-text'
                            style="font-family: 'ZCOOL KuaiLe', cursive !important;">
                        Confirmar
                    </button>
                </div>
            }
        </div>
        <div class="row"></div>
    </div>
</center>
