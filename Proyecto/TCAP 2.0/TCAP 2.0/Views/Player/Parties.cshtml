@using TCAP_2._0.Models.Class
@model List<Party>
@{
    ViewBag.Title = "Partidas";
}
<main>
    @if (Model != null)
    {
        <div class="row">
            <div class="col s12 m8">
                @foreach (Party item in Model)
                {
                    if (item.Status_Party == 4)
                    {
                        @Html.Partial("_ActiveParty", item)
                    }

                }
            </div>
            <div class="col s12 m4">
                @foreach (Party item in Model)
                {
                    if (item.Status_Party == 3)
                    {
                        @Html.Partial("_CloseParty", item)
                    }
                }
            </div>
        </div>
        foreach (Party item in Model)
        {
            @Html.Partial("_ModalParty", item)
        }
    }
    else
    {
        <div class="row">
            <div class="col s12 m12">
                <h2 class="red-text">No tienes Paridas</h2>
            </div>
        </div>
    }

</main>

@section Script
{
    <script>
        $(document).ready(function () {
            $('.modal').modal();
        });
    </script>

}

