@using TCAP_2._0.Models.Class
@model List<Party>
@{
    ViewBag.Title = "Partidas";
}
<main>
    <div class="row">
        <div class="col s2">
            <a href="@Url.Action("CreateParty", "Player")" class="btn-floating btn-large waves-effect waves-light client"><i class='material-icons'>add</i></a>
        </div>
        <div class="col s8 center-align">
            <h3>Tus Partidas</h3>
        </div>
        <div class="col s2"></div>
    </div>
    @if (Model != null && Model.Count > 0)
    {
        <div class="row">
            <div class="col s12 m8">
                @foreach (Party item in Model)
                {
                    if (item.Status_Party == 2)
                    {
                        @Html.Partial("_ActiveParty", item)
                    }

                }
            </div>
            <div class="col s12 m4">
                @foreach (Party item in Model)
                {
                    if (item.Status_Party == 1)
                    {
                        @Html.Partial("_CloseParty", item)
                    }
                }
            </div>
        </div>
        foreach (Party item in Model)
        {
            @Html.Partial("_ModalParty", item)
        }
    }
    else
    {
        <div class="row">
            <div class="col s12 m12">
                <h2 class="red-text center-align">No tienes Paridas</h2>
            </div>
        </div>
    }

</main>

@section Script
{
    <script>
        $(document).ready(function () {
            $('.modal').modal();
        });
    </script>

}

