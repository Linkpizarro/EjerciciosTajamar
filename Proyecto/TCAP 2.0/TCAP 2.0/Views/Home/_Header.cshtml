@using TCAP_2._0.Models.Class
@model Object
<nav class="nav-extended light-green darken-1">
    <div class="nav-background">
        <div class="pattern active" style="background-image: url('../../Media/img/nav.jpg');background-repeat: no-repeat;"></div>
    </div>
    <div class="nav-wrapper container">
        <div class="nav-header center">
            <img src="~/Media/img/tcap_logo.png" width="240vh" height="140vh" >
        </div>
    </div>
</nav>
@if (HttpContext.Current.User.Identity.IsAuthenticated && Model != null)
{
    if (HttpContext.Current.User.IsInRole("1"))
    {
        @Html.Partial("_MenuClient", Model)
    }
    else
    {
        @Html.Partial("_MenuPlayer", Model)
    }
}
else
{
    @Html.Partial("_Menu")
}
